{
  "manifest_version": 2,
  "name": "Scrappi!",
  "description": "",
  "version": "0.1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Scrappi!"
  },
  "permissions": ["contextMenus", "tabs", "https://scrapbox.io.*"],
  "content_scripts": [
    {
      "matches": ["https://scrapbox.io/*"],
      "js": ["scrapbox.io.js"]
    }
  ]
}
